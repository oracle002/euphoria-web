generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Participants {
  participant_id Int @id @default(autoincrement())
  email String 
  password String 
  name String 
  college String @db.VarChar(250)
  phone String 
  event_payments Event_payment[]
  event_participant Event_participants[]

}

model Events {
  event_id Int @id @default(autoincrement())
  event_name String 
  amount Float  
  event_participant Event_participants[]

}


model Event_payment{
  payment_id Int @id @default(autoincrement())
  amount Float
  uuid String 
  verified Boolean
  participant Participants @relation(fields: [participant_id], references: [participant_id])
  participant_id Int

}

model Event_participants{
  event_participant_id Int @id @default(autoincrement())
  events Events @relation(fields: [event_id],references: [event_id])
  event_id Int
  participant Participants @relation(fields: [participant_id], references: [participant_id])
  participant_id Int

}
